import javax.swing.JOptionPane;
public class Exercicio12 {
	public static void main(String [] arg) {
		int anoNasc;
		int anoAtual;
		int idade;
		int idadeFutura;
		
		anoNasc = Integer.parseInt(JOptionPane.showInputDialog("Digite o seu ano de nascimento"));
		anoAtual= Integer.parseInt(JOptionPane.showInputDialog("Digite o ano atualmente"));
		
		idade = anoAtual - anoNasc;
		idadeFutura = idade + 17;
		
		System.out.print("Sua idade é " + idade + " e daqui 17 anos terá " + idadeFutura);
		
	}

}
