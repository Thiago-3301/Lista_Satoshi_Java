import javax.swing.JOptionPane;
public class Exercicio21 {
    public static void main(String [] args){
        
        int n1 = Integer.parseInt(JOptionPane.showInputDialog("Digite a primeira nota"));
        int n2 = Integer.parseInt(JOptionPane.showInputDialog("Digite a segunda nota"));
        int n3 = Integer.parseInt(JOptionPane.showInputDialog("Digite a terceira nota"));
        int n4 = Integer.parseInt(JOptionPane.showInputDialog("Digite a quarta nota"));
        
        int media = (n1 + n2 + n3 + n4) / 4;
        
        if (media >= 6){
            System.out.print("Aluno está aprovado");
        }else if(media >= 3){
            System.out.print("Aluno está de exame");
        }else{
            System.out.print("Aluno está Retido");
        }
        
    }
    
}
